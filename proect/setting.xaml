<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proect.NewPage1"
             Title="Настройки">
    <VerticalStackLayout Padding="30" HorizontalOptions="Center">
        <Label Text="Ваши параметры:" FontSize="24"/>

        <Label Text="Имя:" FontSize="24" TextColor="Blue" HorizontalOptions="Start"/>
        <Entry x:Name="NameEntry" 
               Placeholder="Введите ваше имя" 
               TextChanged="OnNameTextChanged"/>

        <Label Text="Рост:" FontSize="24" TextColor="Blue" HorizontalOptions="Start"/>
        <Entry x:Name="HeightEntry" 
               Placeholder="Введите ваш рост" 
               Keyboard="Numeric"
               TextChanged="OnHeightTextChanged"/>

        <Label Text="Вес:" FontSize="24" TextColor="Blue" HorizontalOptions="Start"/>
        <Entry x:Name="WeightEntry" 
               Placeholder="Введите ваш вес" 
               Keyboard="Numeric"
               TextChanged="OnWeightTextChanged"/>

        <Label Text="Возраст:" FontSize="24" TextColor="Blue" HorizontalOptions="Start"/>
        <Entry x:Name="AgeEntry" 
               Placeholder="Введите ваш возраст" 
               Keyboard="Numeric"
               TextChanged="OnAgeTextChanged"/>

        <Button Text="Сохранить" TextColor="Black" Clicked="OnSaveClicked"/>
        <Label x:Name="LableSetting" FontSize="18" TextColor="Red"/>

        <Button Text="Назад в главное меню" Clicked="ongoback"/>
    </VerticalStackLayout>
</ContentPage>